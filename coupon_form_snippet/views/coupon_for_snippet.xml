<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="carousal_dashboard" inherit_id="website.snippets"
              name="Caroudal Dashboard">
        <xpath expr="//div[@id='snippet_effect']/div[hasclass('o_panel_body')]"
               position="inside">
            <t t-snippet="coupon_form_snippet.s_carousel_template"
               t-thumbnail="/coupon_form_snippet/static/src/image/coupon_form_snippet.png"/>
        </xpath>
    </template>

    <template id="s_carousel_template" name="Coupon Form">
        <section class="s_carousel_template pt24 pb24">
            <div class="container">
                <h3 class="text-center mb32">Get Your Coupon here</h3>
                <p class="text-center o_default_snippet_text" id="show_form_cp">
                    <a href="#" class="btn btn-primary btn-lg s_website_form_send o_default_snippet_text">
                        <i class="fa fa-ticket"/>
                        Get Coupon
                    </a>
                </p>
                <div id="form_cp">
                    <t t-call="coupon_form_snippet.intlTelInput_assets"/>
                    <form class="billingform o_mark_required" role="form" data-mark="*" name="coupon_form" id="coupon_form">
                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                        <div class="form-group col-12 s_website_form_custom s_website_form_required"
                             data-type="char" data-name="Field" data-visibility-condition="" data-visibility-between="">
                            <div class="row s_col_no_resize s_col_no_bgcolor">
                                <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px"
                                       for="name">
                                    <span class="s_website_form_label_content">Name</span>
                                    <span class="s_website_form_mark">*</span>
                                </label>
                                <div class="col-sm">
                                    <input class="form-control s_website_form_input" type="text" id="name" name="name"
                                           required="required"/>
                                </div>
                            </div>
                        </div>
                        <div class="form-group col-12 s_website_form_custom s_website_form_required"
                             data-type="char" data-name="Field" data-visibility-condition="" data-visibility-between="">
                            <div class="row s_col_no_resize s_col_no_bgcolor">
                                <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px"
                                       for="email">
                                    <span class="s_website_form_label_content">Email address</span>
                                    <span class="s_website_form_mark">*</span>
                                </label>
                                <div class="col-sm">
                                    <input class="form-control s_website_form_input" type="email" id="email"
                                           name="email"
                                           required="required"/>
                                </div>
                            </div>
                        </div>
                        <div class="form-group col-12 s_website_form_custom s_website_form_required"
                             data-type="char" data-name="Field" data-visibility-condition="" data-visibility-between="">
                            <div class="row s_col_no_resize s_col_no_bgcolor">
                                <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px"
                                       for="phone">
                                    <span class="s_website_form_label_content">Mobile</span>
                                    <span class="s_website_form_mark">*</span>
                                </label>
                                <div class="col-sm" id="phone_div">
                                    <input class="form-control s_website_form_input" type="tel" id="phone" name="phone"
                                           placeholder="e.g. +36 719 24 18" required="required" value="+36"/>
                                </div>
                            </div>
                        </div>
                        <div class="form-group col-12 s_website_form_custom s_website_form_required"
                             data-type="char" data-name="Field" data-visibility-condition="" data-visibility-between="">
                            <div class="row s_col_no_resize s_col_no_bgcolor">
                                <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px"
                                       for="phone">
                                    <span class="s_website_form_label_content">Promotional coupon</span>
                                    <span class="s_website_form_mark">*</span>
                                </label>
                                <div class="col-sm">
                                    <select name="coupon_program" id="coupon_program" class="form-control"
                                            required="required">
                                        <option/>
                                        <t t-foreach="coupon_programs" t-as="coupon_program">
                                            <option t-att-value="coupon_program.id">
                                                <t t-esc="coupon_program.name"/>
                                            </option>
                                        </t>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="form-group col-12 s_website_form_custom s_website_form_required"
                             data-type="char" data-name="Field" data-visibility-condition="" data-visibility-between="">
                            <div class="row s_col_no_resize s_col_no_bgcolor">
                                <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px"/>
                                <div class="col-sm">
                                    <div class="custom-control custom-checkbox">
                                        <input class="custom-control-input" type="checkbox" value=""
                                               id="tos_cp_checkbox" required="required"/>
                                        <label class="custom-control-label" for="tos_cp_checkbox">I accept
                                            <a data-toggle="modal" data-target="#modal_tos_cp" href="#">TOS</a>
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group col-12">
                            <div class="row s_col_no_resize s_col_no_bgcolor">
                                <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px"/>
                                <div class="col-sm">
                                    <span id="error-msg" class="o_hidden text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group col-12 s_website_form_custom s_website_form_required"
                             data-type="char" data-name="Field" data-visibility-condition="" data-visibility-between="">
                            <div class="col-sm">
                                <center>
                                    <button type="submit" id="submit_button"
                                            class="btn btn-primary btn-lg"
                                            style="margin-top:5px!important; padding-left: 8% !important; padding-right: 8% !important;">
                                        Send
                                    </button>
                                </center>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <t t-call="coupon_form_snippet.tos_coupon_modal"/>
            <t t-call="coupon_form_snippet.success_coupon"/>
        </section>
    </template>

    <template id="intlTelInput_assets">
        <script src="coupon_form_snippet/static/src/js/intlTelInput.js"></script>
        <link rel="stylesheet"
              href="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/css/intlTelInput.css"/>
    </template>

    <template id="success_coupon">
        <div class="success_div" id="success_div">
            <center>
                <img src="coupon_form_snippet/static/src/image/congrats_coupon.png" style="width: 20%;"/>
                <strong><h3>Congratulation !</h3></strong>
                <p>You will receive the Coupon code in your phone number!.</p>
            </center>
        </div>
    </template>

